<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/movieInfo_image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <RelativeLayout
            android:id="@+id/movieInfo_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movieInfo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/colorAccent"
                android:textSize="38sp" />


            <TextView
                android:id="@+id/movieInfo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieInfo_title"
                android:paddingTop="15dp"
                android:text="Date"
                android:textSize="19dp" />


            <TextView
                android:id="@+id/movieInfo_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieInfo_date"
                android:paddingTop="15dp"
                android:text="Genres" />

            <TextView
                android:id="@+id/movieInfo_synopsisLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieInfo_genres"
                android:layout_marginTop="15dp"
                android:text="Synopsis :"/>
            <TextView
                android:id="@+id/movieInfo_synopsisInput"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/movieInfo_synopsisLabel"
                android:layout_marginTop="15dp"
                android:maxLines="10"/>
            <Button
                android:id="@+id/movieInfo_addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieInfo_synopsisInput"
                android:background="@android:color/holo_green_light"
                android:text="Add to Watchlist"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>