<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/usersList_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="16dp"
                android:src="@mipmap/ic_default_profile_picture" />
            <TextView
                android:id="@+id/usersList_nickname"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/usersList_image"
                android:text="Nickname"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/usersList_age"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/usersList_nickname"
                android:gravity="end"
                android:text="AGE"
                android:textAlignment="textEnd"
                />
            <TextView
                android:id="@+id/usersList_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/usersList_nickname"
                android:layout_alignStart="@+id/usersList_nickname"
                android:layout_below="@+id/usersList_nickname"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/usersList_image"
                android:padding="3dp"
                android:text="City"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/usersList_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/usersList_age"
                android:layout_alignStart="@+id/usersList_age"
                android:layout_below="@+id/usersList_age"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/usersList_city"
                android:gravity="end"
                android:padding="3dp"
                android:text="Zipcode"
                android:textAlignment="textEnd"
                android:textSize="12dp" />
            <Button
                android:id="@+id/usersList_addButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/usersList_zipcode"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:text="+"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>